@{
    ViewData["Title"] = "Home Page";
}
<div class="div-login text-center">
    <form class="form-signin" asp-action="Index" asp-controller="Home">
        <label for="Email" class="sr-only">Email</label>
        <input type="email" name="Email" class="form-control" placeholder="Email" required autofocus />
        <label for="Password" class="sr-only" style="margin-top: 100px">Password</label>
        <input type="password" name="Password" class="form-control" placeholder="Password" required />

        <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>

        <div asp-validation-summary="All" class="text-danger mt-5 mb-3"></div>
    </form>
</div>>
